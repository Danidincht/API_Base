{
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"jest",
		"@typescript-eslint"
	],
	"root": true,
	"overrides": [
		{
			"files": [
				"./src/**"
			],
			"rules": {
				"quotes": ["error", "single"],
				"semi-style": ["error", "last"],
				"semi": ["error", "always", {}]
			},
			"extends": [
				"plugin:@typescript-eslint/strict"
			]
		}
	]
}